<!-- activity_registro.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/nombreEquipoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Equipo" />

    <EditText
        android:id="@+id/ciudadEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreEquipoEditText"
        android:layout_marginTop="8dp"
        android:hint="Ciudad del Equipo" />

    <Button
        android:id="@+id/guardarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ciudadEditText"
        android:layout_marginTop="16dp"
        android:text="Guardar" />

    <!-- Otros elementos de interfaz de usuario si es necesario -->

</RelativeLayout>
